{{#validated-input/x-input-wrapper
    model=this.model
    changeset=this.changeset
    title=this.title
    errors=this.errors
    label=this.label
    valuePath=this.valuePath
    validationStatus=this.validationStatus
    as |inputElementId|
}}
    <Input
        aria-label={{this.ariaLabel}}
        @id={{or @uniqueID inputElementId}}
        @type={{if this.password 'password' 'text'}}
        @value={{this.value}}
        @placeholder={{this._placeholder}}
        @class='form-control'
        @name={{@valuePath}}
        @keyUp={{@onKeyUp}}
        @change={{@onChange}}
        @disabled={{this.disabled}}
    />

    {{#if @autoTitle}}
        <OsfButton
            @type='success'
            @onClick={{action this.getTitle}}
        >
            {{t 'registries.drafts.draft.form.auto_button_label'}}
        </OsfButton>
    {{/if}}

    {{#if @autoDate}}
        <OsfButton
            @type='success'
            @onClick={{action this.getDate}}
        >
            {{t 'registries.drafts.draft.form.auto_button_label'}}
        </OsfButton>
    {{/if}}
{{/validated-input/x-input-wrapper}}
