<div local-class='LabelWrapper' ...attributes>
    <span 
        data-test-label
        local-class='Label'
    >
        {{this.localizedLabel}}
    </span>

    {{#if this.showCount}}
        <span
            data-test-count
            local-class='Count'
        >

            {{@count}}
        </span>
    {{/if}}
</div>
