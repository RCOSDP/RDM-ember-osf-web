                                        {{row.fields.fullname}}
                                    </label>
                                {{/each}}
                            {{else}}
                                <p>{{t 'integromat.meetingDialog.noAttendees'}}</p>
                            {{/if}}
                        </span>
                    </div>
                </div>
                <div local-class='Integromat__input_items'>
                    <table>
                        <tr>
                            <td><label>{{t 'integromat.start_datetime'}}</label></td><td></td><td></td>
                            <td><label>{{t 'integromat.end_datetime'}}</label></td><td></td>
