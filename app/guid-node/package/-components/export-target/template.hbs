<div local-class='export_target'>
    <div>
        {{t 'metadata.package.export_target.description'}}
    </div>
    <div class='form-group row'>
        <div class='col-sm-10'>
            <select
                data-test-destination
                class='form-control'
                onchange={{action this.destinationChanged value='target.value'}}
            >
                {{#each this.providers as |provider|}}
                    <option selected={{if (eq this.destination provider.name) 'selected'}} value={{ provider.name }}>
                        {{provider.name}}
                    </option>
                {{/each}}
            </select>
        </div>
    </div>
</div>
