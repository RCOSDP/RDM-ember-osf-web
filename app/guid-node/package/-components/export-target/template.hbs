<div local-class='export_target'>
    <div>
        {{t 'metadata.package.export_target.description'}}
    </div>
    <div class='form-group row'>
        <div class='col-sm-10'>
            <select
                data-test-destination
                class='form-control'
                onchange={{action this.destinationChanged value='target.value'}}
            >
                <option selected={{if (eq this.destination 'weko') 'selected'}} value=''>
                    {{t 'metadata.package.export_target.weko'}}
                </option>
            </select>
        </div>
    </div>
</div>
